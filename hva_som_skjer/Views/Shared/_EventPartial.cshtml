@model hva_som_skjer.Models.Event


<div class="row">
    <div class="col-md-3"></div>
    <div class="card w-50" style="width: 18rem;">
        <img class="card-img-top" src="@Model.ImagePath" alt="Card image cap">
        <div class="card-body">
            <a asp-action="Details" asp-route-id="@Model.Id">
                <h5 class="card-title"> @Model.Title</h5>
            </a>
            <h6 class="card-subtitle mb-2 text-muted">@Model.StartDate.ToLongDateString(), kl. @Model.StartTime.ToString("HH:mm")</h6>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Location</h6>
            <p class="card-text">@Model.Content</p>
            <a asp-action="Details" asp-route-id="@Model.Id">Vis</a> |
            <a asp-action="Edit" asp-route-id="@Model.Id">Rediger</a> |
            <a asp-action="Delete" asp-route-id="@Model.Id">Slett</a> |
            <a asp-action="Create">Opprett</a>
        </div>
    </div>
</div>
<br>