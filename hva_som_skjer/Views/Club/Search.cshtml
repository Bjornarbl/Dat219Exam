@model hva_som_skjer.Models.ClubViewModel

<h2>Search</h2>
<hr />


<form class="form-inline" method="get">

    <div class="form-group">
      <input asp-for="Search" class="form-control" placeholder="Search" />
    </div>
  
    Limit

    <div class="form-group">
      <select asp-for="Limit" class="form-control">
        <option value="10">10</option>
        <option value="25">25</option>
        <option value="50">50</option>
        <option value="75">75</option>
        <option value="100">100</option>
      </select>
    </div>

    Order

    <div class="form-group">
      <select asp-for="OrderBy" class="form-control">
          <option value="A">A-Z</option>
          <option value="Z">Z-A</option>
      </select>
    </div>

    Sort by

    <div class="form-group">
      <select asp-for="Type" class="form-control">
          <option value="Name">Name</option>
          <option value="Category">Category</option>
          <option value="Founded">Founded</option>
      </select>
    </div>




  <div class="form-group">
    <div class="input-group">
      <button class="btn btn-info" type="submit">
        Search
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </div>
  </div>
  

</form>

<div class="card-body">
  <h2>Results</h2>
</div>

  @foreach (var p in Model.Results)
  {
    
    <div class="card w-50 container">
      <img asp-action="Club" asp-route-id="@p.Id" class="card-img-left" src="@p.Image">
      <div class="card-body">
        <h5 class="card-title">@p.Name</h5>
        <i class="card-text">@p.Category - </i>
        <i class="card-text">@p.Founded</i>
        <p class="card-text">@p.Description</p>
      </div>  
    </div>
  }